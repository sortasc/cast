    <div class='add' ng-click='place()'><a><span>&#10133;</span></a></div>
    
    <div data-ng-show='tools.journey' data-ng-animate="'fade'">
      <div class='tooltip fade bottom in journey'>
        <div class="tooltip-arrow"></div>
        <div class="tooltip-inner">
          <h6><%= t('add_hours') %></h6>
          <input type="text" class="span3" name='hours' placeholder="00:00">
          <input type="text" class="span3" name='project' placeholder="Project">
          <a class="btn btn-block btn-success" href="#">Save?</a>
        </div>
      </div>
    </div>

