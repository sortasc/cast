  <div class="item notes">
    <h6>Notes</h6>
    <div class='content'></div>
  </div>

  <div class="item score" ng-controller='ScoresCtrl'>
    <input class='dial' data-min='-100' data-bgColor='#27ae60' data-fgColor='#2ecc71' data-thickness='.4' data-displayPrevious=true value='{{ score }}'>
  </div>

  <div class="item timer" ng-controller='JourneysCtrl'>
    <h6><%= t('boards.journey') %></h6>
